	<td align="center">Order online and earn 1.5% online store credit* - Register here at <a href="https://hydrafacial.store/register">https://hydrafacial.store/register</a></td>
	</tr>
	<tr>
	<td align="center">*Limits apply - see store for details.</td>
	</tr>
</table>-->

<table class="item-table" style="margin-top:10px;" width="100%"><tr>
	<th align="center" colspan="1">Quantity</th>
	<th align="center" colspan="1">Unit</th>
	<th align="center" colspan="2">Item No.</th>
	<th align="center" colspan="4">Description</th>
	<th align="center" colspan="1">Unit<br />Price</th>
	<th align="center" colspan="1">Amount</th>
	</tr>
	<#if record.item?has_content><!-- start items -->
      <#list record.item as item>
        <#if item.itemtype == "InvtPart" || item.itemtype == "NonInvtPart" || item.itemtype == "Assembly" || item.itemtype == "Group" || item.itemtype == "Kit">
        <tr>
          <td align="center" colspan="1">${item.quantity}</td>
          <td align="center" colspan="1">${item.saleunit}</td>
          <td align="center" colspan="2">${item.item}</td>
          <td align="center" colspan="4">${item.description}</td>
          <td align="center" colspan="1">${item.rate}</td>
          <td align="center" colspan="1">${item.amount}</td>
          </tr>
        </#if>
      </#list>
      </#if>
	<tr>
	<td align="left" colspan="10">
	<table style="border:none;margin:top:10px;" width="100%"><tr>
		<td align="left" style="border:0;">
		<table class="nonbordered-tbl" style="border:0;" width="30%"><tr>
			<td align="left" style="background-color:#E1AD01;" width="1%">&nbsp;</td>
			<td align="left" width="90%"><b>Freight/Tax: </b></td>
			</tr></table>

		<table class="nonbordered-tbl" style="border:0;" width="80%"><tr style="border-bottom:1px dotted #0D47A1;">
			<td align="left" width="10%"><b># </b></td>
			<td align="left" width="50%"><b>Description </b></td>
			<td align="right" width="40%"><b>Total </b></td>
			</tr>
			<tr style="border-bottom:1px dotted #0D47A1;">
			<td align="left" width="10%">1</td>
			<td align="left" width="50%">Shipping &amp; Handling</td>
			<td align="right" width="40%"><#if record.altshippingcost?has_content>${record.altshippingcost}<#else>${record.shippingcost}</#if></td>
			</tr>
			<tr style="border-bottom:2px solid #0D47A1;">
			<td align="left" width="10%">2</td>
			<td align="left" width="50%">Tax</td>
			<td align="right" width="40%">${record.taxtotal}</td>
			</tr></table>
		</td>
		<td style="border:none;">
		<table class="nonbordered-tbl" style="margin-top:30px;border:0;" width="80%"><tr>
			<td align="left" width="50%">Order Subtotal:</td>
			<td align="right" width="50%"><b>${record.subtotal} </b></td>
			</tr>
			<tr>
			<td align="left" width="50%">Total Before Freight/Tax:</td>
			<td align="right" width="50%"><b>${record.subtotal} </b></td>
			</tr>
			<tr>
			<td align="left" width="50%">Total Freight/Tax:</td>
			<td align="right" width="50%"><b>${record.taxtotal} </b></td>
			</tr></table>

		<table class="nonbordered-tbl" style="border:0;" width="80%"><tr>
			<td align="left" style="background-color:#E1AD01;" width="2%">&nbsp;</td>
			<td align="left" width="48%"><b>Total Before Freight/Tax: </b></td>
			<td align="right" width="50%"><b>${record.total}</b></td>
			</tr></table>
		</td>
		</tr></table>
	</td>
	</tr></table>

<table class="item-table" style="margin-top:15px;" width="100%"><tr style="color:#808080;">
	<td align="center" colspan="1" style="border-top:1px solid black;">Customer No.</td>
	<td align="center" colspan="1" style="border-top:1px solid black;">Ship Via</td>
	<td align="center" colspan="1" style="border-top:1px solid black;">PO No.</td>
	<td align="center" colspan="1" style="border-top:1px solid black;">Terms</td>
	</tr>
	<tr>
	<td align="center" colspan="1">${record.entity}</td>
	<td align="center" colspan="1">${record.shipmethod}</td>
	<td align="center" colspan="1">${record.otherrefnum}</td>
	<td align="center" colspan="1">${record.terms}</td>
	</tr></table>

